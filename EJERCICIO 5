#include <stdio.h>

int main()
{
    setbuf(stdout, NULL);
    int opcion;
    do{
    printf("\t MENU DE OPCIONES \n");
    printf("1. Inicializar\n 2. cargar\n 3. Mostrar\n 4. Calcular Promedio\n 5. Ordenar\n 6. Salir\n");
    scanf("%d",&opcion);
    switch(opcion)
    {
        case 1:
            printf("Usted ha elegido la opcion 1 (Inicializar)\n");
            break;
        case 2:
            printf("Usted ha elegido la opcion 2 (Cargar)\n");
            break;
        case 3:
            printf("Usted ha elegido la opcion 3 (Mostrar)\n");
            break;
        case 4:
            printf("Usted ha elegido la opcion 4 (Calcular Promedio)\n");
            break;
        case 5:
            printf("Usted ha elegido la opcion 5 (Ordenar)\n");
            break;
        case 6:
            printf("Usted ha elegido la opcion 6 (Salir)\n");
            break;
    }
    }while(opcion!=6);
    

    return 0;
}
