//EJERCICIO 1.3//
int main()
{
    int n1;
    int n2;
    int n3;
    printf("Ingrese el primer numero:");
    scanf("%d",&n1);
    printf("Ingrese el segundo numero:");
    scanf("%d",&n2);
    printf("Ingrese el tercer numero:");
    scanf("%d",&n3);
    if(n1>n2&&n1<n3||n1>n3&&n1<n2)
    {
        printf("el numero del medio es: %d",n1);
    }else if(n2>n1&&n2<n3||n2>n3&&n2<n1)
    {
        printf("el numero del medio es: %d",n2);
    }else if(n3>n1&&n3<n2||n3>n2&&n3<n1)
    {
        printf("el numero del medio es: %d",n3);
    }else
    {
        printf("no hay numero del medio");
    }
    return 0;
}

